{
    "name": "kire-core",
    "directives": {
        "define": {
            "params": [
                "name:string"
            ],
            "children": true
        },
        "defined": {
            "params": [
                "name:string"
            ],
            "children": "auto"
        },
        "stack": {
            "params": [
                "name:string"
            ],
            "children": false
        },
        "push": {
            "params": [
                "name:string"
            ],
            "children": true
        },
        "if": {
            "params": [
                "cond:any"
            ],
            "children": true,
            "related": [
                "else",
                "elseif"
            ]
        },
        "elseif": {
            "params": [
                "cond:any"
            ],
            "children": true
        },
        "unless": {
            "params": [
                "cond:any"
            ],
            "children": true
        },
        "else": {
            "children": true
        },
        "for": {
            "params": [
                "expr:any"
            ],
            "children": true
        },
        "each": {
            "params": [
                "items:any",
                "as:string"
            ],
            "children": true
        },
        "empty": {
            "params": [
                "expr:any"
            ],
            "children": true
        },
        "isset": {
            "params": [
                "expr:any"
            ],
            "children": true
        },
        "class": {
            "params": [
                "classes:any"
            ]
        },
        "style": {
            "params": [
                "styles:any"
            ]
        },
        "checked": {
            "params": [
                "cond:any"
            ]
        },
        "selected": {
            "params": [
                "cond:any"
            ]
        },
        "disabled": {
            "params": [
                "cond:any"
            ]
        },
        "readonly": {
            "params": [
                "cond:any"
            ]
        },
        "switch": {
            "params": [
                "expr:any"
            ],
            "children": true
        },
        "case": {
            "params": [
                "val:any"
            ],
            "children": true
        },
        "default": {
            "children": true
        },
        "once": {
            "children": true
        },
        "error": {
            "params": [
                "field:string"
            ],
            "children": true
        },
        "csrf": {
            "children": false
        },
        "method": {
            "params": [
                "method:string"
            ],
            "children": false
        },
        "const": {
            "params": [
                "expr:string"
            ],
            "children": false
        },
        "let": {
            "params": [
                "expr:string"
            ],
            "children": false
        },
        "include": {
            "params": [
                "path:string",
                "locals:object"
            ],
            "children": false
        },
        "slot": {
            "params": [
                "name:string"
            ],
            "children": true
        },
        "yield": {
            "params": [
                "name:string",
                "default:string"
            ],
            "children": false
        },
        "component": {
            "params": [
                "path:string",
                "locals:object"
            ],
            "children": true
        },
        "layout": {},
        "extends": {},
        "section": {}
    },
    "elements": {
        "kire:else": {},
        "kire:elseif": {
            "related": [
                "kire:elseif",
                "kire:else"
            ]
        },
        "kire:if": {
            "related": [
                "kire:elseif",
                "kire:else"
            ]
        },
        "kire:for": {
            "related": [
                "kire:empty"
            ]
        },
        "kire:empty": {},
        "kire:switch": {},
        "kire:case": {},
        "kire:default": {},
        "^x-": {}
    },
    "attributes": {},
    "types": [
        {
            "variable": "kire",
            "type": "global",
            "comment": "The Kire template engine instance.",
            "tstype": "import('kire').Kire"
        },
        {
            "variable": "$kire",
            "type": "context",
            "comment": "The Kire template engine instance (context alias).",
            "tstype": "import('kire').Kire"
        },
        {
            "variable": "$props",
            "type": "context",
            "comment": "Local variables passed to the template.",
            "tstype": "Record<string, any>"
        },
        {
            "variable": "it",
            "type": "context",
            "comment": "Reference to the local variables (props). Alias for $props.",
            "tstype": "Record<string, any>"
        },
        {
            "variable": "$globals",
            "type": "context",
            "comment": "Global variables accessible in all templates.",
            "tstype": "Record<string, any>"
        },
        {
            "variable": "$kire_response",
            "type": "context",
            "comment": "The output buffer string. Can be modified directly.",
            "tstype": "string"
        },
        {
            "variable": "$escape",
            "type": "context",
            "comment": "Function to escape HTML content.",
            "tstype": "(v: any) => string"
        }
    ],
    "author": "Drysius",
    "repository": "https://github.com/drysius/kire",
    "version": "0.1.2"
}