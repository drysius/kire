{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity":{
				"noBannedTypes":"off"
			},
			"performance": {
				"noAccumulatingSpread":"off"
			},
			"suspicious": {
				"noAssignInExpressions":"off",
				"noExplicitAny":"off",
				"useIterableCallbackReturn":"off"
			},
			"style":{
				"noNonNullAssertion":"off"
			},
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
