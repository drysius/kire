{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Kire Configuration",
	"description": "Configuration file for Kire directives to provide IntelliSense in editors.",
	"type": "object",
	"required": ["package", "directives"],
	"properties": {
		"package": {
			"type": "string",
			"description": "Name of the package providing these directives."
		},
		"repository": {
			"type": ["string", "object"],
			"properties": {
				"type": { "type": "string" },
				"url": { "type": "string" }
			}
		},
		"version": {
			"type": "string"
		},
		"globals": {
			"type": "object",
			"additionalProperties": true
		},
		"elements": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["name"],
				"properties": {
					"name": { "type": "string" },
					"void": { "type": "boolean" }
				}
			}
		},
		"attributes": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"additionalProperties": {
					"type": "object",
					"properties": {
						"type": { "type": ["string", "boolean"] },
						"comment": { "type": "string" },
						"example": { "type": "string" }
					}
				}
			}
		},
		"directives": {
			"type": "array",
			"description": "A list of directive definitions.",
			"items": { "$ref": "#/definitions/directive" }
		}
	},
	"definitions": {
		"directive": {
			"type": "object",
			"required": ["name"],
			"properties": {
				"name": {
					"type": "string",
					"description": "The name of the directive (without the '@')."
				},
				"params": {
					"type": "array",
					"items": { "type": "string" }
				},
				"children": {
					"description": "Does this directive accept a block ending with @end?",
					"oneOf": [
						{ "type": "boolean" },
						{ "type": "string", "enum": ["auto"] }
					]
				},
				"childrenRaw": {
					"type": "boolean"
				},
				"parents": {
					"type": "array",
					"items": { "$ref": "#/definitions/directive" }
				},
				"description": {
					"type": "string"
				},
				"example": {
					"type": "string"
				},
				"type": {
					"type": "string",
					"enum": ["css", "js", "html"]
				}
			}
		}
	}
}